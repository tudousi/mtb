<!DOCTYPE html>
<html class='no-js' lang='en'>

<head>
    <meta charset='utf-8'>
    <meta content='IE=edge,chrome=1' http-equiv='X-UA-Compatible'>
    <title>Sign in</title>
    <meta content='lab2023' name='author'>
    <meta content='' name='description'>
    <meta content='' name='keywords'>
    <link href="/manage/stylesheets/application.css" rel="stylesheet" type="text/css" />
    <link href="/manage/stylesheets/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="/manage/images/favicon.ico" rel="icon" type="image/ico" />

</head>

<body class='login'>
    <div class='wrapper'>
        <div class='row'>
            <div class='col-lg-12'>
                <div class='brand text-center'>
                    <h1>
                        <div class='logo-icon'>
                            <i class='icon-beer'></i>
                        </div>
                        MTB
                    </h1>
                </div>
            </div>
        </div>
        <div class='row'>
            <div class='col-lg-12'>
                <form method="post" action="/manage/login">
                    <fieldset class='text-center'>
                        <legend>Login to your account</legend>
                        <% if(error_messages){ %>
                            <div class="form-group"><%= error_messages %></div>
                        <% } %>

                        <div class='form-group'>
                            <input name="email" class='form-control' placeholder='Email address' type='text'>
                        </div>
                        <div class='form-group'>
                            <input name="password" class='form-control' placeholder='Password' type='password'>
                        </div>
                        <div class='text-center'>
                            <div class='checkbox'>
                                <label>
                                    <input type='checkbox' name="rem"> Remember me on this computer
                                </label>
                            </div>
                            <button class="btn btn-default">Sign in</button>
                            <br>
                            <a href="/forgot_password.html">Forgot password?</a>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <!-- Javascripts -->
    <script src="/manage/javascripts/vendor/jquery.min.js" type="text/javascript"></script>
    <script src="/manage/javascripts/vendor/jquery-ui.min.js" type="text/javascript"></script>
    <script src="/manage/javascripts/vendor/modernizr.min.js" type="text/javascript"></script>
    <script src="/manage/javascripts/application.js" type="text/javascript"></script>
</body>

</html>
